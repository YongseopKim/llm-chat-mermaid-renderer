{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "types": ["chrome", "node"]
  },
  "include": ["src/**/*", "config/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
